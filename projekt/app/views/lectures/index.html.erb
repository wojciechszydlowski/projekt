<table  class = "lecture">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Punkty ETCS</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.name %> (<%= lecture.short_name %>) </td>
        <td><%= lecture.etcs_point %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Dodaj do planu', lists_path(lecture_id: lecture) %><td>
      </tr>
    <% end %>
  </tbody>
</table>

